extends layout
block content
    h1 #{title}
    form(action="/articles/add", method="post")
        #form-group 
            label Title:  
            input.form-control(type="text" name="title")
        #form-group 
            br
            label Author:  
            input.form-control(type="text" name="author")
        #form-group 
            br  
            textarea(name="body", cols="30", rows="10", placeholder="Content of your Article")
        br
        input.btn.btn-primary(type="submit", value="submit")